FLASK_ENV=production
SECRET_KEY=replace-with-a-strong-random-secret
JWT_SECRET_KEY=replace-with-a-separate-strong-random-secret
POSTGRES_DB=paleta
POSTGRES_USER=paleta
POSTGRES_PASSWORD=paleta_password
DATABASE_URL=postgresql+psycopg://paleta:paleta_password@postgres:5432/paleta
AUTO_CREATE_TABLES=false
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=Lax
CORS_ENABLED=false
JWT_ACCESS_TTL_MINUTES=15
JWT_REFRESH_TTL_DAYS=30
JWT_ISSUER=paleta
JWT_AUDIENCE=paleta-mobile
MAX_IMAGE_PIXELS=20000000
PASSWORD_RESET_CODE_TTL_MINUTES=15
PASSWORD_RESET_MAX_ATTEMPTS=5

# Email reset channel (required for sending codes by email)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# SMS reset channel (optional)
SMS_API_URL=
SMS_API_TOKEN=
SMS_API_TIMEOUT=8
SMS_SENDER_NAME=Paleta
